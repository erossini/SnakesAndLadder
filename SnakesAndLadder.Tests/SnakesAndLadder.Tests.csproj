  <ItemGroup>
    <PackageReference Include="NUnit" Version="3.11.0" />
    <PackageReference Include="NUnit3TestAdapter" Version="3.13.0" />
    <PackageReference Include="SpecFlow" Version="3.0.177-beta" />
    <PackageReference Include="SpecFlow.NUnit" Version="3.0.177-beta" />
    <PackageReference Include="SpecFlow.NUnit.Runners" Version="3.0.177-beta" />
    <PackageReference Include="SpecRun.SpecFlow" Version="3.0.246-beta" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\SnakesAndLadder.Abstractions\SnakesAndLadder.Abstractions.csproj" />
