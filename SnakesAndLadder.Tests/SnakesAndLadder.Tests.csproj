    </Compile>
    <Compile Update="MovingYourToken.feature.cs">
      <DesignTime>True</DesignTime>
      <AutoGen>True</AutoGen>
      <DependentUpon>MovingYourToken.feature</DependentUpon>
    </Compile>
    <Compile Update="MultiplePlayers.feature.cs">
      <DesignTime>True</DesignTime>
      <AutoGen>True</AutoGen>
      <DependentUpon>MultiplePlayers.feature</DependentUpon>
    </Compile>
    <Compile Update="SnakesAndLadders.feature.cs">
      <DesignTime>True</DesignTime>
      <AutoGen>True</AutoGen>
      <DependentUpon>SnakesAndLadders.feature</DependentUpon>
    </Compile>
  </ItemGroup>

  <ItemGroup>
    <None Update="ComputerControlledCharacter.feature">
      <Generator>SpecFlowSingleFileGenerator</Generator>
      <LastGenOutput>ComputerControlledCharacter.feature.cs</LastGenOutput>
    </None>
    <None Update="MovingYourToken.feature">
      <Generator>SpecFlowSingleFileGenerator</Generator>
      <LastGenOutput>MovingYourToken.feature.cs</LastGenOutput>
    </None>
    <None Update="MultiplePlayers.feature">
      <Generator>SpecFlowSingleFileGenerator</Generator>
      <LastGenOutput>MultiplePlayers.feature.cs</LastGenOutput>
    </None>
    <None Update="SnakesAndLadders.feature">
